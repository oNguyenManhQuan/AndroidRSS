<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <!-- Progress Bar Style. -->
    <style name="AppProgressBar" parent="android:Widget.ProgressBar">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:indeterminateDrawable">@drawable/bg_progress_spinning_style</item>
    </style>
    <!-- Button Style For Others Fragment -->
    <style name="AppGridStyleButton">
        <item name="android:paddingTop">@dimen/grid_padding_top</item>
        <item name="android:textColor">@color/color_gray_rgb_95</item>
        <item name="android:textSize">@dimen/text_size_sp_22</item>
        <item name="android:layout_margin">@dimen/margin_size_dp_4</item>
        <item name="android:drawablePadding">@dimen/grid_drawable_padding</item>
        <item name="android:gravity">center</item>
    </style>
    <!-- Material Button Style For Details Page -->
    <style name="AppRegularButton">
        <item name="android:textColor">@color/color_white</item>
        <item name="android:padding">@dimen/margin_size_dp_4</item>
        <item name="android:minWidth">@dimen/ripple_button_min_width</item>
        <item name="android:minHeight">@dimen/ripple_button_min_height</item>
        <item name="android:layout_margin">@dimen/margin_size_dp_4</item>
        <item name="android:background">@drawable/bg_ripple_effect</item>
    </style>

    <style name="AppTabLayout" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@color/tabIndicator</item>
        <item name="tabIndicatorHeight">@dimen/margin_size_dp_2</item>
        <item name="tabBackground">@color/color_gray_rgb_184</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
        <item name="tabSelectedTextColor">@color/colorPrimary</item>
    </style>

    <style name="AppTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_sp_14</item>
        <item name="android:textColor">@color/color_gray_rgb_45</item>
        <item name="textAllCaps">false</item>
    </style>
</resources>